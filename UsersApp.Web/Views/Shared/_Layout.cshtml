<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    @RenderSection("headScripts", required : false);
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="container-fluid p-5 text-center">
        <h2>@ViewBag.Title</h2>       
        <nav>
            <a asp-controller="User" asp-action="Users">Användare</a>
            <a asp-controller="User" asp-action="Register">Registera</a>
            &nbsp;|&nbsp;
            <a asp-controller="Book" asp-action="Index">Böcker</a>
            &nbsp;|&nbsp;
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="User" asp-action="UserDetails">Mina data</a>
                @Html.Raw("&nbsp;| &nbsp;")
                <a asp-controller="User" asp-action="LogOut">Logga ut</a>
            }
            else
            {
                <a asp-controller="User" asp-action="LogIn">Logga in</a>
            }
        </nav>
    </header>
    <content>
        <br />
        <div>
            @RenderBody()
        </div>    
    </content>
    <footer class="container-fluid bg-dark text-white py-3 text-center mt-auto p-5">
        &copy; 2025 UsersApp Alla rättigheter förbehållna.
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
