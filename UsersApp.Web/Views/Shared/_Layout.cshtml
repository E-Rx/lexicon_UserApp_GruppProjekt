<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    @RenderSection("headScripts", required : false);
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="container-fluid p-5 text-center">
        <h2>@ViewBag.Title</h2>       
        <nav>
            <a asp-controller="User" asp-action="Users">Members</a>
            <a asp-controller="User" asp-action="Register">Register</a>
            <a asp-controller="User" asp-action="LogIn">Login</a>
        </nav>
    </header>
    <content>
        <br />
        <div>
            @RenderBody()
        </div>    
    </content>
    <footer class="container-fluid bg-dark text-white py-3 text-center mt-auto p-5">
        &copy; 2025 UsersApp Alla rättigheter förbehållna.
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
